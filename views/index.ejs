<!DOCTYPE html>
<html lang="en" ng-app="todoAPP">


<link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" />
<link rel='stylesheet' href='/stylesheets/style.css' />
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"/>
<style>
	#button{
		height:100px;
	}
	.chatWrap{
		border: 1px #000 solid;
	}
	.popupContainer{
		display:none;
	}
</style>
<body ng-controller="todoController as todo" style="background-image:url(/Photos/bg1.jpg">
		<div class="container navbar navbar-default navbar-fixed-top">
			<a href="" class='navbar-brand'>My Todo APP</a>
			<ul class='nav navbar-nav navbar-right'>
			
        <li class="" ng-show="loginHide"><a href="#modal" id="modal_trigger" >Login</a></li>
        <li class="" ng-hide="loginHide"><a href="">Login as {{userEmail}}</a></li>
        <li class="" ng-hide="loginHide" ng-click="logout()"><a href="">Logout</a></li></ul></div><br/><br/>
		<div class="container" >
			<div class="row " >
				<br/>
				<div class="col-md-4 chatWrap well well-lg">
					<div class="row">
						<div class="col-md-6">
							<h3>All Tasks</h3><br/>
						</div>
						<div class="col-md-3 col-md-offset-2">
							<br/>	
							<button ng-click="addTask()" class="btn btn-lg btn-primary">Add Task</button>
						</div>
					</div>	
					
					<div class="panel panel-danger" ng-repeat="x in results">

					<div class=" panel-heading " >
						<div class="row">
						<div class="col-md-6">
						<a href="" id="tasks"  value="{{x.task_id}}" ng-click="showTask()" >{{x.title}}</a></div>
						<div class="col-md-3 col-md-offset-3">
						<button class="btn btn_red" >Delete</button></div></div>
					
					</div></div>
					
					
				</div>
				<form method="post">
				<div class="col-md-7 col-md-offset-1 chatWrap well well-lg" ng-hide='hide'>
					<div class="row">
						<div class="col-md-8">
							<h3 >Add Task</h3>
						</div>
						<div class="col-md-2">
							<h6><input type="submit" class="btn btn-lg btn-success" ng-click='save()'  value="Save"></h6>
						</div>
						<div class="col-md-2">
							<h6><button class="btn btn-lg btn-danger">Cancel</button></h6>
						</div>
					</div>
					<h4>Title</h4>
					<input type="text" class="form-control" ng-model="title" required />
					<h4>Task Details</h4>
					<input type="text" class="form-control"  ng-model="taskDetails" required />
					<h4>Notes</h4>
					<input type="text" class="form-control" ng-model="notes" >
					<h4>Date <input type="date" class="form-control" ng-model="date"></h4></form>
<!-- 					<h4>Remainder <input type="checkbox" class="form-control" ng-model="remainder"></h4>
					<h4>Repeat <input type="checkbox"class="form-control" ng-model="repeat"></h4> -->
				</div>
			</div>
			
</div>
<div class="container">
	

	<div id="modal" class="popupContainer">
		<header class="popupHeader">
			<span class="header_title" >Login</span>
			<span class="modal_close"><i class="fa fa-times"></i></span>
		</header>
		
		<section class="popupBody">
			<!-- Social Login -->
			<div class="social_login">
			

				<div class="action_btns">
					<div class="one_half"><a href="#" id="login_form" class="btn">Login</a></div>
					<div class="one_half last"><a href="#" id="register_form" class="btn">Sign up</a></div>
				</div>
			</div>

			<!-- Username & Password Login form -->
			<div class="user_login">
				<form id="login">
					<label>Email / Username</label>
					<input type="text" ng-model="email"/>
					<br />

					<label>Password</label>
					<input type="password" ng-model="password"/>
					<br />

					

					<div class="action_btns">
						<div class="one_half"><a href="#" class="btn back_btn"><i class="fa fa-angle-double-left"></i> Back</a></div>
						<div class="one_half last"><a href="#" class="btn btn_red" ng-click="login()">Login</a></div>
					</div>
				</form>

				<a href="#" class="forgot_password">Forgot password?</a>
			</div>

			<!-- Register Form -->
			<div class="user_register">
				<form id="singupform">
					
					<label>Email Address</label>
					<input type="email" ng-model="email" />
					<br />

					<label>Password</label>
					<input type="password" ng-model="password"/>
					<br />

					

					<div class="action_btns">
						<div class="one_half"><a href="#" class="btn back_btn"><i class="fa fa-angle-double-left"></i> Back</a></div>
						<div class="one_half last"><a href="#" class="btn btn_red" ng-click="register()">Register</a></div>
					</div>
				</form>
			</div>
		</section>
	</div>
</div>
<script type="text/javascript" src="/js/jquery-1.11.0.min.js"></script>
<script type="text/javascript" src="/js/jquery.leanModal.min.js"></script>
<script type="text/javascript">
	$("#modal_trigger").leanModal({top : 200, overlay : 0.6, closeButton: ".modal_close" });

	$(function(){
		// Calling Login Form
		$("#login_form").click(function(){
			$(".social_login").hide();
			$(".user_login").show();
			return false;
		});

		// Calling Register Form
		$("#register_form").click(function(){
			$(".social_login").hide();
			$(".user_register").show();
			$(".header_title").text('Register');
			return false;
		});

		// Going back to Social Forms
		$(".back_btn").click(function(){
			$(".user_login").hide();
			$(".user_register").hide();
			$(".social_login").show();
			$(".header_title").text('Login');
			return false;
		});

	})
</script>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  		<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  		<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
  		<script src="/js/controller.js"></script>
  		
		
  		
</body>
</html>
